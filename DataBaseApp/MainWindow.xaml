<Window x:Class="DataBaseApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBaseApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <RadioButton x:Name="DropDbOption" Content="Drop Data Base" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="360,118,0,0" VerticalAlignment="Top"/>
        <TextBlock Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="350,61,0,0" Text="What do you want to do?" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button Content="Execute" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="350,355,0,0" VerticalAlignment="Top" Width="149" Click="Button_Click"/>
        <RadioButton x:Name="OutputTableOption" Content="Output table" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="360,150,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="ClearTableOption" Content="Clear table" Grid.Column="1" HorizontalAlignment="Left" Margin="360,183,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
