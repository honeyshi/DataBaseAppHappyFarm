<Window x:Class="DataBaseApp.SearchByFieldWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBaseApp"
        mc:Ignorable="d"
        Title="SearchByFieldWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="SearchTextBox" HorizontalAlignment="Left" Margin="360,66,0,0" Text="Input animal type" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" MouseDoubleClick="SearchTextBox_MouseDoubleClick"/>
        <TextBlock HorizontalAlignment="Left" Margin="343,33,0,0" Text="Search sick animal by its type" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button x:Name="SearchButton" Content="Search" HorizontalAlignment="Left" Margin="343,105,0,0" VerticalAlignment="Top" Width="154" Click="SearchButton_Click"/>
        <DataGrid x:Name="SearchResultGrid" Margin="243,148,202,43" ItemsSource="{Binding}"/>

    </Grid>
</Window>
