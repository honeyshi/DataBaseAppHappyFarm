<Window x:Class="DataBaseApp.DeleteByTypeOption"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBaseApp"
        mc:Ignorable="d"
        Title="DeleteByTypeOption" Height="350" Width="500">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,51,0,0" Text="Input animal type and click button to delete feeding for it" TextWrapping="Wrap" VerticalAlignment="Top" Width="172" />
        <TextBox x:Name="DeleteTextBox" HorizontalAlignment="Center" Margin="0,105,0,0" Text="Input type" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" MouseDoubleClick="DeleteTextBox_MouseDoubleClick"/>
        <Button Content="Delete" HorizontalAlignment="Center" Margin="0,152,0,0" VerticalAlignment="Top" Height="29" Width="120" Click="DeleteButton_Click"/>
    </Grid>
</Window>
